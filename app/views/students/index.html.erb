<%= render'application/sidebar' %>

<div class="old_students main_content">
<h1>生徒一覧</h1>
<p>(生徒の親は詳細から健康情報が登録可能)</p>

<%= search_form_for @q do |f| %>
   <%= f.label :student_name, '生徒名' %>
   <%= f.search_field :student_name_cont %>
   <%= f.label :school_year, "学年" %>
   <%= f.select :school_year_eq, Student.school_years.keys.to_a, {} %>
   <%= f.submit '検索' %>
 <% end %>
<p class="discription"><span>※カテゴリー(幼児：D 、１-２年生：C 、３-４年生：B 、５-６年生：A) </span></p>

<p><%= notice %></p>
<table class= "student_center">
  <tr>
    <th>ユーザー</th>
    <th>生徒名</th>
    <th>カテゴリー</th>
    <th>学年</th>
    <th>詳細</th>
  </tr>
<div class="student_box"
  <% @students.each do |student| %>
    <tr>
      <td><%= student.user.name %></td>
      <td><%= student.student_name %></td>
      <td><%= student.category %></td>
      <td><%= student.school_year %></td>
      <td><%= link_to '生徒詳細', student_path(student.id) %></td>
    </tr>
  <% end %>
</div>
</table><br>
<%= link_to '新しく生徒を登録する', new_student_path %>
</div>
