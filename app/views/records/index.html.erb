<h1>健康管理一覧</h1
<p><%= notice %></p>
<table>
  <tr>
    <th>日付</th>
    <th>体温</th>
    <th>せき</th>
    <th>くしゃみ</th>
    <th>鼻水</th>
    <th>だるさ</th>
    <th>家族体調不良</th>
    <th>出欠席</th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.record_at %></td>
    <td><%= record.body_temperature %></td>
    <td><%= record.is_cough %></td>
    <td><%= record.is_sneeze %></td>
    <td><%= record.is_runny_nose %></td>
    <td><%= record.is_dull %></td>
    <td><%= record.is_family_illness %></td>
    <td><%= record.attendance %></td>
    <td><%= link_to '詳細', record_path(id: record.id) %></td>
  </tr>
<% end %>
</table>
<%= link_to '健康情報を登録する', new_record_path %>
