<%= form_with(model: @record, local: true ,url: choose_new_or_edit_record ) do |form| %>
  <% if @record.errors.any? %>
    <div id="error_explanation">
      <h2><%= @record.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @record.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="record_date">
    <%= form.label :日付 %>
    <%= form.date_field :record_at, value: Time.now.strftime("%Y-%m-%d") %>
  </div><br>
  <div class="temperature">
    <%= form.label :体温 %>
    <%= form.text_field :body_temperature %>
  </div><br>
  <div class="cough">
    <%= form.label :せき %>
    <%= form.select :is_cough, Record.is_coughs.keys %>
  </div><br>
  <div class="sneeze">
    <%= form.label :くしゃみ %>
    <%= form.select :is_sneeze, Record.is_sneezes.keys %>
  </div><br>
  <div class="runny_nose">
    <%= form.label :鼻水 %>
    <%= form.select :is_runny_nose, Record.is_runny_noses.keys %>
  </div><br>
  <div class="dull">
    <%= form.label :だるさ %>
    <%= form.select :is_dull, Record.is_dulls.keys %>
  </div><br>
  <div class="family_illness">
    <%= form.label :家族体調不良 %>
    <%= form.select :is_family_illness, Record.is_family_illnesses.keys %>
  </div><br>
  <div class="attendance">
    <%= form.label :出欠席 %>
    <%= form.select :attendance, Record.attendances.keys %>
  </div><br>

  <%= form.hidden_field :student_id %>

　<%= form.submit %>
<% end %><br>
<%= link_to "健康情報一覧", student_records_path %>
