<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <hr>
      <a href="/users/#{comment.user_id}"><%= comment.user.name %></a>
      <p><%= comment.content %></p>
      <p><%= image_tag comment.image.url, class: 'rounded-circle' if comment.image.present?%></p>
      <% if comment.user == current_user %>
        <p><%= link_to "コメント編集", edit_post_comment_path(@post, comment), remote: true %></p>
        <p><%= link_to 'コメントを削除する', post_comment_path(comment.post_id, comment.id), method: :delete, remote: true %></p>
      <% end %>
      <p class = "hr"></p>
    <% end %>
  <% end %>
</ul>
