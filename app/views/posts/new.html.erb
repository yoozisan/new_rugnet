<%= form_with(model: @post, local: true) do |form| %>
　<div class="post_title">
　　<%= form.label :title %>
　　<%= form.text_field :title %>
　</div>
　<div class="post_content">
　　<%= form.label :content %>
　　<%= form.text_field :content %>
　</div>
　<%= form.submit %>
<% end %>
<%= link_to "ブログ一覧画面にもどる", posts_path %>
