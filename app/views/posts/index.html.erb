<h1>日記一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= image_tag(post.image.to_s) %></td>
    <td><%= link_to '詳細', post_path(post.id) %></td>
    <td><%= link_to "編集", edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しく日記を投稿する', new_post_path %><br>
