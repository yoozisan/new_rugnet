<h1>日記一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "日記を編集する", edit_post_path(post.id) %></td>
    <td><%= link_to '日記を削除する', post_path(post.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しく日記を投稿する', new_post_path %>
